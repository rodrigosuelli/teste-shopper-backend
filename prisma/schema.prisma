generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MeasureType {
  id        Int       @id @default(autoincrement())
  type      String    @unique @map("measure_type")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  measures  Measure[]

  @@map("measure_types")
}

model Measure {
  uuid          String      @id @default(uuid()) @map("measure_uuid")
  datetime      DateTime    @default(now()) @map("measure_datetime")
  imageUrl      String      @map("image_url")
  customerCode  String      @map("customer_code")
  hasConfirmed  Boolean     @default(false) @map("has_confirmed")
  measureValue  Int         @map("measure_value")
  measureType   MeasureType @relation(fields: [measureTypeId], references: [id])
  measureTypeId Int         @map("measure_type_id")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  @@map("measures")
}
